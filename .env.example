# Configuration Kraken API
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here
KRAKEN_API_TIER=pro  # starter, intermediate, pro

# Configuration Redis
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600

# Configuration PostgreSQL
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Configuration du trading
TRADING_PAIR=BTC/USD
TRADING_AMOUNT=0.01
TRADING_FEE=0.0026
RISK_LEVEL=medium
QUOTE_CURRENCY=USD
MIN_VOLUME_BTC=5.0
MAX_SPREAD_PCT=0.5
MIN_TRADES_24H=100
CUSTOM_PAIRS=BTC/USD,ETH/USD
MAX_DAILY_DRAWDOWN=5.0
RISK_PERCENTAGE=1.0
MAX_LEVERAGE=1.0

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/kraken_bot.log

# Configuration ML (optionnel)
ML_MODEL_PATH=models/
ML_MODEL_TYPE=xgboost  # xgboost, random_forest, lstm, neural_network
